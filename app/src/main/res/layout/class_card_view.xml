<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardCornerRadius="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="80"
                android:id="@+id/class_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:drawableStart="@drawable/clss_img"
                android:textColor="@color/black"
                android:drawablePadding="15dp"
                android:textSize="20dp"
                android:text="III CSE C"/>

            <ImageView
                android:id="@+id/btn_share"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_img"/>

        </LinearLayout>

        <TextView
            android:id="@+id/subject_name"
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/text_blue"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Android App Development"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/staff_name"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/nunito_semibold"
                android:drawableStart="@drawable/staff_img"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:gravity="fill"
                android:drawablePadding="15dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Saranya E"/>
            <TextView
                android:id="@+id/studnt_count"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:layout_weight="1"
                android:gravity="fill"
                android:drawablePadding="15dp"
                android:fontFamily="@font/nunito"
                android:drawableStart="@drawable/student_img"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:text="10 Students"/>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>